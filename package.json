{
  "name": "gooditworks_base",
  "version": "1.1.0",
  "description": "Gooditworks base project",
  "repository": "https://github.com/gooditworks/base",
  "license": "MIT",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "scripts": {
    "base:check": "sh ./scripts/check_base_update.sh",
    "base:update": "sh ./scripts/update_base.sh",
    "build": "tsc",
    "commit": "git add . && cz",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "lint": "concurrently -c green \"pnpm:lint:*\"",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "start": "ts-node src/index.ts",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"pnpm:test:*\"",
    "test:unit": "jest"
  },
  "dependencies": {
    "@sentry/node": "^7.38.0",
    "@sentry/tracing": "^7.38.0",
    "dotenv": "16.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/lint": "^17.3.0",
    "@evilmartians/lefthook": "^1.2.1",
    "@types/jest": "29.5.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "commitizen": "4.3.0",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.36.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "27.2.1",
    "jest": "29.5.0",
    "jest-junit": "15.0.0",
    "prettier": "2.8.6",
    "sort-package-json": "2.4.1",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  }
}
