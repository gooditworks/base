{
  "name": "gooditworks_base",
  "version": "1.0.0",
  "description": "Gooditworks base project",
  "repository": "https://github.com/gooditworks/base",
  "license": "MIT",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "scripts": {
    "build": "tsc",
    "commit": "git add . && cz",
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "release": "standard-version",
    "start": "ts-node src/index.ts",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.5.4",
    "dotenv": "16.0.3"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@types/jest": "29.2.3",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "commitizen": "4.2.5",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "7.6.0",
    "cz-conventional-changelog": "3.3.0",
    "enhanced-resolve": "5.10.0",
    "eslint": "8.28.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-jest": "27.1.5",
    "jest": "29.3.1",
    "jest-junit": "15.0.0",
    "prettier": "2.7.1",
    "sort-package-json": "2.1.0",
    "standard-version": "9.5.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  }
}
