{
  "name": "@gooditworks/base",
  "version": "0.2.0",
  "description": "Абстрактный проект Гудитворкс. Соглашения, утилиты, конфигурация среды.",
  "homepage": "https://github.com/gooditcollective/base#readme",
  "repository": "https://github.com/gooditcollective/base",
  "license": "MIT",
  "author": "Sergey Petrov <sergey@goodit.works>",
  "contributors": [
    "Sergey Petrov <sergey@goodit.works> (sergeypetrov.ru)",
    "Max Eliseev <max@goodit.works>"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "git add . && cz",
    "dev:local": "vercel dev",
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "release": "standard-version",
    "start": "ts-node src/index.ts",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest"
  },
  "dependencies": {
    "@commitlint/lint": "17.0.3",
    "@gooditworks/monitoring": "^1.5.4",
    "@types/node": "18.7.5",
    "dotenv": "16.0.1",
    "eslint-plugin-import": "2.26.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@evilmartians/lefthook": "1.1.0",
    "@types/jest": "28.1.6",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "commitizen": "4.2.5",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "7.3.0",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.3.1",
    "enhanced-resolve": "5.10.0",
    "eslint": "8.21.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-jest": "26.8.2",
    "jest": "28.1.3",
    "jest-junit": "14.0.0",
    "prettier": "2.7.1",
    "sort-package-json": "1.57.0",
    "standard-version": "9.5.0",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
